---
export interface Props {
  audioFile: string;
  title?: string;
}

const { audioFile, title = "Audio Summary" } = Astro.props;
---

<div class="audio-summary">
  <div class="audio-header">
    <h3>{title}</h3>
    <svg class="audio-icon" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
      <path d="M9 18V5l12-2v13"></path>
      <circle cx="6" cy="18" r="3"></circle>
      <circle cx="18" cy="16" r="3"></circle>
    </svg>
  </div>
  <audio 
    controls 
    preload="metadata"
    class="audio-player"
  >
    <source src={audioFile} type="audio/wav">
    Your browser does not support the audio element.
  </audio>
</div>

<style>
  .audio-summary {
    margin: 2rem 0;
    padding: 1.5rem;
    background: rgb(var(--accent-light));
    border-radius: 12px;
    border: 1px solid rgb(var(--accent));
  }

  .audio-header {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    margin-bottom: 1rem;
  }

  .audio-header h3 {
    margin: 0;
    font-size: 1.1rem;
    color: rgb(var(--accent-dark));
  }

  .audio-icon {
    color: rgb(var(--accent));
    flex-shrink: 0;
  }

  .audio-player {
    width: 100%;
    height: 40px;
    border-radius: 8px;
  }

  .audio-player::-webkit-media-controls-panel {
    background-color: rgb(var(--gray-light));
    border-radius: 8px;
  }

  .audio-player::-webkit-media-controls-play-button,
  .audio-player::-webkit-media-controls-pause-button {
    border-radius: 50%;
  }

  @media (max-width: 720px) {
    .audio-summary {
      margin: 1.5rem 0;
      padding: 1rem;
    }
    
    .audio-header h3 {
      font-size: 1rem;
    }
  }
</style>
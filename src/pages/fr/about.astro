<style>
  .about-page {
    padding: 2rem 0;
  }

  .about-hero {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 4rem;
    margin-bottom: 4rem;
    padding: 2rem 0;
    background: linear-gradient(135deg, var(--color-bg) 0%, var(--color-bg-secondary) 100%);
    border-radius: var(--radius-lg);
  }

  .hero-content {
    flex: 1;
    max-width: 600px;
  }

  .page-title {
    font-size: 3rem;
    font-weight: 900;
    line-height: 1.1;
    margin-bottom: 1rem;
    background: linear-gradient(135deg, var(--color-primary) 0%, var(--color-secondary) 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .page-subtitle {
    font-size: 1.25rem;
    color: var(--color-text-light);
    line-height: 1.6;
  }

  .hero-visual {
    flex-shrink: 0;
  }

  .about-icon {
    animation: pulse 4s ease-in-out infinite;
  }

  @keyframes pulse {
    0%, 100% { transform: scale(1); }
    50% { transform: scale(1.05); }
  }

  .about-content {
    max-width: 800px;
    margin: 0 auto;
  }

  .about-content section {
    margin-bottom: 4rem;
  }

  .about-content h2 {
    font-size: 2rem;
    font-weight: 800;
    margin-bottom: 1.5rem;
    color: var(--color-text);
  }

  .about-content p {
    font-size: 1.1rem;
    line-height: 1.7;
    margin-bottom: 1.5rem;
    color: var(--color-text-light);
  }

  .values-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 2rem;
    margin-top: 2rem;
  }

  .value-card {
    background: white;
    padding: 2rem;
    border-radius: var(--radius-lg);
    box-shadow: var(--shadow-md);
    border: 1px solid var(--color-border);
    text-align: center;
    transition: transform 0.2s ease, box-shadow 0.2s ease;
  }

  .value-card:hover {
    transform: translateY(-4px);
    box-shadow: var(--shadow-lg);
  }

  .value-icon {
    font-size: 3rem;
    margin-bottom: 1rem;
  }

  .value-card h3 {
    font-size: 1.375rem;
    font-weight: 700;
    margin-bottom: 1rem;
    color: var(--color-text);
  }

  .value-card p {
    font-size: 1rem;
    color: var(--color-text-light);
    margin-bottom: 0;
  }

  .topics-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 1.5rem;
    margin-top: 2rem;
  }

  .topic-item {
    padding: 1.5rem;
    background: var(--color-bg-secondary);
    border-radius: var(--radius-md);
    border-left: 4px solid var(--color-primary);
  }

  .topic-item h3 {
    font-size: 1.25rem;
    font-weight: 700;
    margin-bottom: 0.75rem;
    color: var(--color-text);
  }

  .topic-item p {
    font-size: 1rem;
    margin-bottom: 0;
    color: var(--color-text-light);
  }

  .contact-section {
    text-align: center;
    padding: 2rem;
    background: linear-gradient(135deg, var(--color-primary-light) 0%, var(--color-bg-secondary) 100%);
    border-radius: var(--radius-lg);
  }

  .contact-info {
    display: flex;
    justify-content: center;
    gap: 3rem;
    margin-top: 2rem;
  }

  .contact-item {
    font-size: 1.1rem;
    color: var(--color-text-light);
  }

  .contact-item strong {
    color: var(--color-text);
  }

  @media (max-width: 768px) {
    .about-hero {
      flex-direction: column;
      text-align: center;
      gap: 2rem;
      margin-bottom: 3rem;
    }

    .page-title {
